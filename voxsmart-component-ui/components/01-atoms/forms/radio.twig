{% if radio %}
  {% set base_class = radio.base_class|default('o-form-item') %}

  <div class="{{ base_class }}" {{ radio.attributes }}>
    <input id="radio-{{ radio.id }}" type="radio" name="{{ radio.name }}"{% if radio.checked %} checked="checked"{% endif %} {{ radio.input.attributes }}>
    <label for="radio-{{ radio.id }}" aria-label="{{ radio.text }}">{{ radio.text }}</label>
  </div>
{% endif %}
