{% set block_class = button.block_class|default('o-button') %}
{% set button_tag = 'button' %}
{% if button.url %}
  {% set button_tag = 'a' %}
{% endif %}
{% if button.url or button.text or button.icon %}
  <{{ button_tag }} role="button" class="{{ bem(block_class, button.element, button.modifiers, button.extra) }}" {{ button.url ? 'href="' ~ button.url ~ '"' }} {{ button.target == '_blank' ? ' target="_blank" rel="noreferrer"' }} {{ attributes(button.attributes) }}>
    {% include "@icon" with button.icon_before %}
    {% if button.text %}
      <span>{{ button.text }}</span>
    {% endif %}
    {% include "@icon" with button.icon_after %}
  </{{ button_tag }}>
{% endif %}
