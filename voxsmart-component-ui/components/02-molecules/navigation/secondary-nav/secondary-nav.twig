{% set base_class = secondary_nav.base_class|default('c-secondary-nav') %}
{% if secondary_nav.items %}
  <nav role="navigation" class="{{ bem(base_class, secondary_nav.element, secondary_nav.modifiers, secondary_nav.extra) }}">
    <ul class="{{ bem(base_class, 'parent-list') }}">
      {% for item in secondary_nav.items %}
        <li class="{{ bem(base_class, 'parent-list-item') }}">
          {% include "@link" with {
            "link": {
              "text": item.text,
              "url": item.url,
              "target": item.target,
              "extra": bem(base_class, 'link'),
            }
          } %}
        </li>
      {% endfor %}
    </ul>
  </nav>
{% endif %}
