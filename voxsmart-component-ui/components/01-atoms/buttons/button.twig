{% if button.url or button.text or button.icon %}
  {% set button_tag = 'button' %}
  {% if button.url %}
    {% set button_tag = 'a' %}
  {% endif %}

  <{{ button_tag }} role="button" class="o-button {{ button.classes }}" {{ button.url ? 'href="' ~ button.url ~ '"' }} {{ button.target == '_blank' ? ' target="_blank" rel="noreferrer"' }} {{ button.attributes }}>
    {% if button.icon_before %}
      {% include "@icon" with "icon": button.icon_before %}
    {% endif %}
    {% if button.text %}
      <span>{{ button.text }}</span>
    {% endif %}
    {% if button.icon_after %}
      {% include "@icon" with "icon": button.icon_after %}
    {% endif %}
  </{{ button_tag }}>
{% endif %}
